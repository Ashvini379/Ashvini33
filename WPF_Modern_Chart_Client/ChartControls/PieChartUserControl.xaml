<UserControl x:Class="WPF_Modern_Chart_Client.ChartControls.PieChartUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Modern_Chart_Client.ChartControls"
             xmlns:modernchart="clr-namespace:De.TorstenMandelkow.MetroChart;assembly=De.TorstenMandelkow.MetroChart"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <modernchart:PieChart>
            <modernchart:PieChart.Series>
                <modernchart:ChartSeries SeriesTitle="Pie Chart Series" Height="580" Width="830"
                                         DisplayMember="Name"
                                         ValueMember="Series"
                                         ItemsSource="{Binding}">
                    
                </modernchart:ChartSeries>
            </modernchart:PieChart.Series>
        </modernchart:PieChart>
    </Grid>
</UserControl>
